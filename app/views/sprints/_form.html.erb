<%= form_for(@sprint) do |f| %>
  <% if @sprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sprint.errors.count, "error") %> prohibited this sprint from being saved:</h2>

      <ul>
      <% @sprint.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :team_id %><br />
    <%= f.number_field :team_id %>
  </div>
  
  <div class="alert alert-error" id="alert">
    <strong></strong>
  </div>
  
  <div class="input-append date" id="date-start" data-date="<%= @start_date %>" data-date-format="dd-mm-yyyy">
  	<input class="span2" size="16" type="text" name="date_start" value="<%= @start_date %>">
  	<span class="add-on"><i class="icon-calendar"></i></span>
  </div>  
  
  <div class="input-append date" id="date-end" data-date="<%= @end_date %>" data-date-format="dd-mm-yyyy">
  	<input class="span2" size="16" type="text"  name="date_end" value="<%= @end_date %>">
  	<span class="add-on"><i class="icon-calendar"></i></span>
  </div>
  
  <div class="actions">
    <%= f.submit "Save", :class => 'btn btn-primary pull-right' %>
  </div>
<% end %>

<script>
	var startDate = new Date(<%= @start_datetime.to_i * 1000 %>);
	var endDate = new Date(<%= @end_datetime.to_i * 1000 %>);
</script>