<p id="notice"><%= notice %></p>

<h1><%= @sprint.name %></h1>

<div class="row">
	<div class="span12">
		<table class="table">
			<thead>
				<tr>
					<td>Name</td>
					<td>Description</td>
					<td>Current Stage</td>
					<td>Working on</td>
				</tr>
			</thead>
			<tbody>
			<% if !@sprint.tasks.empty? %>
				<% @sprint.tasks.each do |task| %>
					<tr>
						<td><%= task.name %></td>
						<td><%= task.description %></td>
						<td>
							<% if !task.stage.nil? %>
								<%= task.stage.name %>
							<% else %>
								Not started.
							<% end %>
						</td>
						<td>
							<% task.users.each do |user| %>
								<p><%= user.name %></p>
							<% end %>
						</td>
						<td><%= link_to 'Assign', :controller => 'sprints', :action => 'assign_stage', :task_id => task.id %> </td>
					</tr>
				<% end %>
			<% end %>
			</tbody>
		</table>
	</div>
</div>

<p>Target story points: <%= @target_storypoints %><p>

<%= link_to 'Edit', edit_sprint_path(@sprint) %> |
<%= link_to 'Back', sprints_path %>
